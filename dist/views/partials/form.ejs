
<h1 class="display-4 text-center">Insert a product </h1>
<div class="container">
    <div class="row">
        <!-- Form create a product -->
        <div class="col-6 mb-3">
            <form action="/api/v1/product" method="post">
            <div class="form-group row mb-3">
                <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                <input type="text" class="form-control" id="title" name="title" placeholder="..." required/>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label for="inputDescription" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                <input type="text" class="form-control" id="description" name="description" placeholder=""/>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label for="inputCode" class="col-sm-2 col-form-label">Code</label>
                <div class="col-sm-10">
                <input type="text" class="form-control" id="code" name="code" placeholder=""/>
                </div>
            </div>
            <div class="input-group mb-3">
                <label for="inputPrice" class="col-sm-2 col-form-label">Price</label>
                <span class="input-group-text">â‚¬</span>
                <span class="input-group-text">0.00</span>
                <input type="number" class="form-control" id="price" name="price" step="0.01" placeholder="" required>
            </div>
            <div class="form-group row mb-3">
                <label for="inputStock" class="col-sm-2 col-form-label">Stock</label>
                <div class="col-sm-10">
                <input type="number" class="form-control" id="stock" name="stock" step="1" min="1" max="10000" placeholder="" required/>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label for="inputImage" class="col-sm-2 col-form-label">Image URL</label>
                <div class="col-sm-10">
                <input type="text" class="form-control" id="image" name="image" placeholder="http://url.com/product.jpg" required/>
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-primary"> Create product </button>
            </div>
            </form>
        </div>


        <!-- Table product list -->
        <div class="col-6">
            <!-- <h1>Product list</h1> -->
            
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Code</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">Stock</th>
                    </tr>
                </thead>
                <tbody id="product-table"> </tbody>
            </table>

        </div>
    </div>
</div>